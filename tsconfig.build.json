{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/lib", "env.d.ts"],
  "exclude": ["src/demo"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
