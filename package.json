    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "prettier": "3.6.2",
    "sass": "^1.77.8",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^3.9.1",
    "vue": "^3.5.18",
    "vue-tsc": "^3.0.4"
